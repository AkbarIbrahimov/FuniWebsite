}


@section css{
    <link href="css/PersonDetail.css" rel="stylesheet" />
}

<!-- Hero Section -->
<header class="hero">
    <div class="hero-content">
        <img src="images/member1.jpg" alt="Lawson Arnold">
        <div>
            <h1>Lawson Arnold</h1>
            <h3>CEO, Founder, Attorney</h3>
            <p>
                Leading our company with passion and innovation, Lawson brings 15+ years of expertise
                in corporate law and international business.
            </p>
        </div>
    </div>
</header>

<!-- About Section -->
<section class="section">
    <div class="container">
        <h2>About Lawson</h2>
        <p>
            Lawson Arnold studied law at Harvard University and quickly made a name for himself
            in the world of corporate law. With a vision to create impactful solutions,
            he founded our company, which today operates in more than 20 countries worldwide.
        </p>
    </div>
</section>

<!-- Experience Section -->
<section class="section bg-light">
    <div class="container">
        <h2>Experience</h2>
        <div class="experience-grid">
            <div class="exp-card">
                <h4>2015 - Present</h4>
                <p><strong>CEO, Our Company</strong></p>
                <p>Guiding the company to international growth and innovation.</p>
            </div>
            <div class="exp-card">
                <h4>2010 - 2015</h4>
                <p><strong>Corporate Attorney</strong></p>
                <p>Worked with international clients on contracts and business law.</p>
            </div>
            <div class="exp-card">
                <h4>2005 - 2010</h4>
                <p><strong>Law Consultant</strong></p>
                <p>Advised startups and SMEs on legal compliance and business expansion.</p>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="section">
    <div class="container">
        <h2>Skills & Expertise</h2>
        <div class="skills">
            <span>Corporate Law</span>
            <span>Business Strategy</span>
            <span>Leadership</span>
            <span>Negotiation</span>
            <span>International Trade</span>
            <span>Public Speaking</span>
        </div>
    </div>
</section>

